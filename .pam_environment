#
# ~/.pam_environment
#

# Local PATH
PATH  DEFAULT=${PATH}:@{HOME}/.local/bin

# Editor to use
EDITOR=vim

# Fcitx IM
GTK_IM_MODULE=fcitx
QT_IM_MODULE=fcitx
XMODIFIERS=@im=fcitx

# Android SDK dir
ANDROID_HOME  DEFAULT=@{HOME}/Softwares/AndroidSdk

# ssh agent
SSH_AUTH_SOCK DEFAULT=${XDG_RUNTIME_DIR}/ssh-agent.socket

# KWallet ssh unlock
SSH_ASKPASS=/usr/bin/ksshaskpass

# GTK3 HiDPI Scale
GDK_SCALE=2
GDK_DPI_SCALE=0.5
