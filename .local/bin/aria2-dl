#!/bin/bash

BOLD=$(tput bold)
NORMAL=$(tput sgr0)

usage() {
    echo "Usage: aria2-dl [-d] <URLs of ${BOLD}SAME${NORMAL} file>"
    exit 1
}

DEBUG="0"
ID=$(date +%s)
JSON_TPL='{"jsonrpc":"2.0","id":"","method":"aria2.addUri","params":[[]]}'

# https://stackoverflow.com/a/16496491/8370777
while getopts "d" o;
do
    case "${o}" in
    d)
        DEBUG="1"
        ;;
    *)
        usage
        ;;
    esac
done
shift $((OPTIND-1))

JSON=$(echo "$JSON_TPL" | jq -M ".id=$ID")

for URL in $@;
do
    JSON=$(echo "$JSON_TPL" | jq -M ".params[0]+=[\"$1\"]")
done

if [ "$DEBUG" == "1" ];
then
    echo "$JSON" | jq
else
    curl --silent -X POST                    \
        -H "Content-Type: application/json"  \
        --data "$JSON"                       \
        http://localhost:6800/jsonrpc        | jq
fi
